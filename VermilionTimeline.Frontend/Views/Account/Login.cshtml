@using VermilionTimeline.Frontend.Models.Forms;
@model LoginModel
@{
}

<div class="container mx-auto">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      
      <h1 class="mt-3 mb-3 h3">
        Login
      </h1>

      <form method="post">
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" id="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mb-3">
          <label class="form-label">Password</label>
          <input type="password" id="password" class="form-control" asp-for="Password"/>
        </div>

        <div class="mb-3">
          <button type="submit" class="btn btn-dark">Login</button>
        </div>
      </form>

      <!-- display errors -->
      @if (Model?.Messages?.Any() ?? false)
      {
        <div class="alert alert-danger alert-dismissable">
          @if (Model.Messages.Count() > 1)
          {
            <strong><span class="glyphicon glyphicon-remove"></span> There are @Model.Messages.Count() errors: </strong>
            <ul>
              @foreach (String message in Model.Messages)
              {
                  <li>@Html.Raw(message)</li>
              }
            </ul>
          }
          else
          {
            <strong><span class="glyphicon glyphicon-remove"></span> Error: </strong>
                    @Html.Raw(Model.Messages.First())
          }
        </div>
      }
    </div>
  </div>
</div>
